<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.budgetmanagementapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetManagementApp">
        <activity android:name=".TripsList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.BudgetManagementApp.NoActionBar" />
        <activity android:name=".AddMember" />
        <activity android:name=".AddTripExpense" />
        <activity android:name=".CreateTrip" />
        <activity android:name=".Trips" />
        <activity android:name=".History" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".AddIncome" />
        <activity android:name=".AddExpense" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.BudgetManagementApp.NoActionBar" />
        <activity
            android:name=".CompleteProActivity"
            android:theme="@style/Theme.BudgetManagementApp.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/Theme.BudgetManagementApp.NoActionBar" />
        <activity
            android:name=".SplashActivty"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.BudgetManagementApp.NoActionBar"></activity>
    </application>

</manifest>