<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetmanagementapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetManagementApp">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name=".AddMember" />
        <activity android:name=".AddTripExpense" />
        <activity android:name=".CreateTrip" />
        <activity android:name=".Trips" />
        <activity android:name=".History" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".AddIncome" />
        <activity android:name=".AddExpense" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CompleteProActivity" />
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".SplashActivty"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.BudgetManagementApp.NoActionBar">

        </activity>
    </application>

</manifest>